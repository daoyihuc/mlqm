<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radiu_10"
    android:backgroundTint="@color/whilte"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/question_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_message_black_24dp"
            />

        <TextView
            android:id="@+id/question_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/question_image"
            android:layout_marginTop="10dp"
            android:text="dsddsdd"
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/question_image"
            android:text="提交时间：2020-08-22 10:20" />
    </RelativeLayout>

</LinearLayout>
