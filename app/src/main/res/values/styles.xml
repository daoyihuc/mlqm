<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whilte</item>
        <item name="colorPrimaryDark">@color/whilte</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/popmeuText</item>
        <item name="android:textAppearanceLargePopupMenu">@style/popmeuText</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">true</item>
    </style>

    <!--设置popupmenu-->
    <style name="PopupStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/whilte</item>
    </style>
    <!--设置popup字体颜色-->
    <style name="popmeuText">
        <item name="android:textColor">@color/back</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>

    </style>
    <style name="popupwindown" parent="android:Animation">

        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <!--checkbox-->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/whilte</item>
        <item name="colorControlActivated">@color/whilte</item>
    </style>

    <!--dilog底部透明动画-->
    <style name="bottom_menu_animations" parent="android:Animation"
        >
        <item name="android:windowEnterAnimation">@anim/bottom_menu_enters</item>
        <item name="android:windowExitAnimation">@anim/bottom_menu_exits</item>
    </style>

    <!--indexActivity 样式-->
    <style name="index_style" parent="AppTheme">

    </style>


    <style name="chat_room_menu_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="chat_room_menu_item_splitter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="chat_room_menu_item_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_call_tools_panel_button">
        <item name="android:layout_width">@dimen/adaptive_56dp</item>
        <item name="android:layout_height">@dimen/adaptive_56dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/em_call_btn_bg</item>
    </style>

    <style name="style_call_tools_panel_button_wrapper">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="style_debug_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/adaptive_18sp</item>
    </style>

    <style name="horizontal_slides" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>

</resources>
